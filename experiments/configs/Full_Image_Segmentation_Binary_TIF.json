{
    "epochs": 200,
    "patience": 50,
    "type": "segmentation",

    "model": {
        "name":"smp_Unet",
        "params": {
            "encoder_name": "se_resnext50_32x4d",
            "encoder_weights": null,
            "activation": "softmax2d"
        }
    },

    "metrics": {
        "iou_score": {
            "stats": {
                "mode": "multilabel",
                "threshold": 0.5
            },
            "metric": {
                "reduction": null
                }
        },
        "f1_score": {
            "stats": {
                "mode": "multilabel",
                "threshold": 0.5
            },
            "metric": {
                "reduction": null
            }
        },
        "precision": {
            "stats": {
                "mode": "multilabel",
                "threshold": 0.5
            },
            "metric": {
                "reduction": null
                }
        },
        "recall": {
            "stats": {
                "mode": "multilabel",
                "threshold": 0.5
            },
            "metric": {
                "reduction": null
            }
        },
        "sensitivity": {
            "stats": {
                "mode": "multilabel",
                "threshold": 0.5
            },
            "metric": {
                "reduction": null
            }
        }
    },

    "loss": {
        "name": "DiceLoss",
        "params": {
            "mode": "multilabel"
         }
    },

    "optimizer": {
        "name": "Adam",
        "patience": 10,
        "watch": "iou_score",
        "params": {
            "lr": 0.001
        }
    },

    
    "train": {
        "dataset": {
            "name": "Cellular",
            "root_dir": "<path>",
            
            "classes": {
                "Background": 0,
                "Cell": 1
            },

            "batch_size": 4,

            "params": { "bianry": true },

            "augmentations":  [
                {
                    "name": "HorizontalFlip",
                    "params": {
                        "p": 0.5
                    }
                },
                {
                    "name": "ShiftScaleRotate",
                    "params": {
                        "scale_limit":0.5,
                        "rotate_limit":0,
                        "shift_limit":0.1,
                        "p":1,
                        "border_mode":0,
                        "value": 0,
                        "mask_value": 0
                    }
                },
                {
                    "name": "PadIfNeeded",
                    "params": {
                        "min_height": 224,
                        "min_width": 224,
                        "always_apply": true,
                        "border_mode": 0,
                        "value": 0,
                        "mask_value": 0
                    }
                },
                {
                    "name": "Resize",
                    "params": {
                        "height": 224,
                        "width": 224,
                        "always_apply": true
                    }
                }
            ]
        }
    },
        
    "valid": {
        "dataset": {
            "name": "Cellular",
            "root_dir": "<path>",

            "params": { "bianry": true },

            "classes": {
                "Background": 0,
                "Cell": 1
            },

            "augmentations": [
                {
                    "name": "PadIfNeeded",
                    "params": {
                        "min_height": 224,
                        "min_width": 224,
                        "always_apply": true,
                        "border_mode": 0,
                        "value": 0,
                        "mask_value": 0
                    }
                },
                {
                    "name": "Resize",
                    "params": {
                        "height": 224,
                        "width": 224,
                        "always_apply": true
                    }
                }
            ]
        }   
    },

    "test": {
        "dataset": {
            "name": "Cellular",
            "root_dir": "<path>",

            "params": {
                "image_size": 224
            },

            "classes": {
                "Background": 0,
                "Cell": 1
            },

            "augmentations": [
                {
                    "name": "PadIfNeeded",
                    "params": {
                        "min_height": 224,
                        "min_width": 224,
                        "always_apply": true,
                        "border_mode": 0,
                        "value": 0,
                        "mask_value": 0
                    }
                },
                {
                    "name": "Resize",
                    "params": {
                        "height": 224,
                        "width": 224,
                        "always_apply": true
                    }
                }
            ]
        }   
    }
}